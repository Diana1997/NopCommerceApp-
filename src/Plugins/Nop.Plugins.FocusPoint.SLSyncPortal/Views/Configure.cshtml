@model Nop.Plugins.FocusPoint.SLSyncPortal.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}


<form asp-controller="SLSyncPortal" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Url"></nop-label>
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Url" asp-required="true"/>
                        <span asp-validation-for="Url"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <div class="input-group input-group-short">
                            <div class="input-group-text">
                                <input type="submit" name="save" class="btn btn-primary" value="Save"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


